{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "assignees": [
    "thatleda"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchFileNames": [
        "pnpm-workspace.yaml"
      ],
      "rangeStrategy": "replace",
      "recreateWhen": "always"
    }
  ]
}
