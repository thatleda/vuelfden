{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "abandonmentThreshold": "6 months",
  "extends": [
    "config:recommended",
    ":dependencyDashboard"
  ],
  "assignees": [
    "thatleda"
  ],
  "npm": {
    "managerFilePatterns": [
      "/(^|/)package\\.json$/",
      "/(^|/)pnpm-lock\\.yaml$/",
      "/(^|/)pnpm-workspace\\.yaml$/",
      "/(^|/)\\.yarnrc\\.yml$/"
    ]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": [
      "before 5am on monday"
    ]
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  },
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "major-update"
      ]
    },
    {
      "matchPackageNames": [
        "nuxt"
      ],
      "prCreation": "not-pending",
      "minimumReleaseAge": "3 days"
    }
  ]
}
